<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>{% block title %}TalentBooster{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ absolute_url(asset('vendor/bootstrap/css/bootstrap.min.css')) }}">
            <link rel="stylesheet" href="{{ absolute_url(asset('vendor/fontawesome/css/font-awesome.min.css')) }}">
            <link rel="stylesheet" href="{{ absolute_url(asset('css/talentbooster.css')) }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <!--div class="search-bar">
            <form method="GET" action="" class="js-sea-search sea-search">
                <input type="search" name="q" placeholder="Search Sea Creatures" autocomplete="off" class="search-input">
            </form>
        </div-->
        <header class="header">
            <a href="{{ absolute_url(path('dashboard_start')) }}"><img class="logo-icon" style="padding-left: 20px;" src="{{ absolute_url(asset('images/organisation/logo.png')) }}"></a>
            {% if (isPdf|default('false') != 'true') %}
                <h1 class="logo" style="padding-left: 20px;">TalentBooster</h1>
            {% endif %}
            <ul class="navi">
                <!--li class="search"><a href="#" class="js-header-search-toggle"><i class="fa fa-search"></i></a></li-->
                {% if (isPdf|default('false') != 'true') %}
                    {% if app.user %}
                        <li style="margin-right: 20px;"><span class="fa fa-user"></span> {{ app.user.fullname }}</li>
                        <li style="padding-right: 20px;"><a href="{{ path('security_logout') }}">Logout</a></li>
                    {% else %}
                        <li style="padding-right: 20px;"><a href="{{ path('security_login') }}"><span class="fa fa-lock"></span> Login</a></li>
                    {% endif %}
                {% endif %}
            </ul>
        </header>

        <div class="main-content" style="padding-left: 20px; padding-right: 20px;">
            {%  for msg in app.session.flashBag.get('info') %}
                <div class="alert alert-info">
                    {{ msg }}
                </div>
            {% endfor %}

            {%  for msg in app.session.flashBag.get('success') %}
                <div class="alert alert-success">
                    {{ msg }}
                </div>
            {% endfor %}

            {%  for msg in app.session.flashBag.get('error') %}
                <div class="alert alert-danger">
                    {{ msg }}
                </div>
            {% endfor %}

            {% block body %}{% endblock %}
        </div>

        {% if (isPdf|default('false') != 'true') %}
            <div class="footer">
                <p class="footer-text">&copy;<a href="http://www.intopeople.com.au">IntoPeople bvba</a></p>
            </div>
        {% endif %}

        {% block javascripts %}
            <script src="http://code.jquery.com/jquery-2.1.4.min.js"></script>
            <script src="{{ absolute_url(asset('js/main.js')) }}"></script>
        {% endblock %}
    </body>
</html>
