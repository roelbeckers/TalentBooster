{% extends('form/formLayout.twig') %}

{% if (formProgress == 'cdp') %}
    {% set formName = 'Career Development Plan' %}
{% elseif (formProgress == 'my') %}
    {% set formName = 'Mid-Year' %}
{% else %}
    {% set formName = 'Year-End' %}
{% endif %}


{% block title %}{{ formName }}{% endblock %}

{% block javascripts %}

    {{ parent() }}
    <script>
        $(function() {
            $('.btnSave').on('click', function() {
                $(this).prepend('<i class="fa fa-refresh fa-spin"></i>  ');
            });
        });
    </script>

{%endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>{{ formName }}</h1>
                <h3>Cycle {{ cycleName }}</h3>
                {% set isPdf = isPdf %}
                {{
                    include('form/_form.html.twig')
                }}

            </div>
        </div>
    </div>

{% endblock %}